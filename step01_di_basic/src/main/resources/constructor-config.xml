<?xml version="1.0" encoding="UTF-8"?>

<!--
애플리케이션의 동작에 필요한
비즈니스 객체에 대한 정보, 즉 Bean을 작성하고 구성하는 파일
-> 빈 설정 정보(Bean Configuration)라고 함

여기서는 .xml 방식으로 작성하는 것
-->

<!-- https://docs.spring.io/spring-framework/docs/4.2.x/spring-framework-reference/html/xsd-configuration.html -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  <beans> </beans> 내부에 개별 비즈니스 객체들인 Bean들을 <bean>라는 태그로 정의  -->

    <!-- TapeReader에 대한 빈 설정 정보 -->
    <!-- class: 스프링이 해당 클래스의 위치를 참조하도록 하기 위해 패키지 포함 풀네임 -->
    <bean class="dev.syntax.step04_constructor_based_di.TapeReader">
        <constructor-arg ref="tapeId"/>
    </bean>

    <!-- Tape에 대한 빈 설정 정보 -->
    <bean id="tapeId" class="dev.syntax.step04_constructor_based_di.Tape">
        <constructor-arg name="name" value="살모사"/>
        <constructor-arg name="isWorked" value="true" />
    </bean>

</beans>