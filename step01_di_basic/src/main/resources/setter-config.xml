<?xml version="1.0" encoding="UTF-8"?>

<!--
애플리케이션의 동작에 필요한
비즈니스 객체에 대한 정보, 즉 Bean을 작성하고 구성하는 파일
-> 빈 설정 정보(Bean Configuration)라고 함

여기서는 .xml 방식으로 작성하는 것
-->

<!-- https://docs.spring.io/spring-framework/docs/4.2.x/spring-framework-reference/html/xsd-configuration.html -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  <beans> </beans> 내부에 개별 비즈니스 객체들인 Bean들을 <bean>라는 태그로 정의  -->

    <!-- TapeReader에 대한 빈 설정 정보 -->
    <!-- class: 스프링이 해당 클래스의 위치를 참조하도록 하기 위해 패키지 포함 풀네임 -->
    <bean class="dev.syntax.step03_xml_based_di.TapeReader">
        <!-- property: 특정 빈 객체가 가진 필드명 -->
        <!-- name에는 필드명, -->
        <!-- ref에는 특정 <bean>의 id와 매핑시켜줄 값, 특정 빈을 지정하기 위한 참조, 식별 역할 -->
        <property name="tape" ref="tapeId"/>
    </bean>

    <!-- Tape에 대한 빈 설정 정보 -->
    <bean id="tapeId" class="dev.syntax.step03_xml_based_di.Tape">
        <!--
             name attribute는 필드명과 동일,
             set을 제외하고 name만으로 작성하면 Spring이 알아서 setName()을 호출해줌
         -->
        <property name="name" value="아일랜드" />
        <property name="worked" value="true" />
    </bean>

</beans>